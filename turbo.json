{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**/*", ".next/**/*"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    },
    "clean": {
      "cache": false
    },
    "release": {
      "cache": false
    }
  },
  "globalEnv": ["GITHUB_TOKEN", "NODE_ENV", "ANALYZE"],
  "globalDependencies": ["**/.env*"]
}
