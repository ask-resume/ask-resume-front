  ],
  "author": "dev-redo",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "turbo": "^1.8.8",
    "typescript": "^5.0.3",
    "eslint": "8.37.0",
    "jest": "^29.5.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  }
