{
  "name": "ask-resume-front",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "pretty": "prettier --write \"src/**/*.(ts|tsx)\"",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "deploy": "turbo run build --scope=app --includeDependencies --no-deps",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "test": "pnpm -r run jest",
    "storybook": "pnpm -r run storybook"
  },
  "turboConfig": "./turbo.json",
  "workspace": [
    "app",
    "packages/*"
  ],
  "keywords": [],
  "author": "dev-redo",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "turbo": "^1.8.8",
    "typescript": "^5.0.3"
  },
  "lint-staged": {
    "app/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
