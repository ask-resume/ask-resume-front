{
  "name": "ask-resume-front",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:env": "cross-env NODE_ENV=development",
    "build:env": "cross-env NODE_ENV=production",
    "dev": "pnpm run dev:env && dotenv -- turbo run dev",
    "build": "pnpm run build:env && turbo run build",
    "deploy": "pnpm run build:env && turbo run build --scope=app --includeDependencies --no-deps",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "test": "turbo run jest",
    "storybook": "pnpm -r run storybook",
    "build-storybook": "pnpm -r run build-storybook"
  },
  "turboConfig": "./turbo.json",
  "workspace": [
    "apps/*",
    "packages/*"
  ],
  "author": "dev-redo",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "8.37.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  }
}
